begin
  Form3.Show;
end;

procedure TForm1.cxButton3Click(Sender: TObject);
var a, b: string;
  butMes: Integer;

begin
  a:= Form1.ADOTable1.Fields.Fields[0].AsString;   //id
  b:= 'DELETE FROM note WHERE id_note='+a;
  butMes:= MessageDlg('Вы действительно хотите удалить заметку №'+a+'?', mtCustom, [mbYes, mbCancel], 0);
  if butMes = mrYes
  then
    begin
      ADOQuery1.Close;
      ADOQuery1.SQL.Clear;
      ADOQuery1.SQL.Add(b);
      ADOQuery1.ExecSQL;
      Form1.ADOTable1.Active:= False;
      Form1.ADOTable1.Active:= True;
      ShowMessage('Заметка удалена!');
    end;
end;

procedure TForm1.cxButton5Click(Sender: TObject);
begin
  Form4.Show;
end;

procedure TForm1.N1Click(Sender: TObject);
var F : TextFile;
  i : integer;
  CopyString : string;

begin
  i:= StrToInt(ADOTable1.Fields.Fields[0].AsString);

  AdoTable1.Active:=True;
  if SaveDialog1.Execute then
  begin

  AssignFile(F,SaveDialog1.FileName);
  Rewrite(F);
  WriteLn(F, '№ | Заметки');
  CopyString:='';
  CopyString:=CopyString + ' ' + ADOTable1.Fields.Fields[i].AsString + chr(VK_TAB);
  WriteLn(F, CopyString);
  CloseFile(F);
  end;

end;

procedure TForm1.N2Click(Sender: TObject);
var F : TextFile;
  i : integer;
  CopyString : string;

begin
  i:= StrToInt(ADOTable1.Fields.Fields[0].AsString);

  AdoTable1.Active:=True;
  if SaveDialog1.Execute then
  begin

  AssignFile(F,SaveDialog1.FileName);
  Rewrite(F);
  WriteLn(F, '№ | Заметки');
  CopyString:='';
  CopyString:=CopyString + ' ' + ADOTable1.Fields.Fields[i].AsString + chr(VK_TAB);
  WriteLn(F, CopyString);
  CloseFile(F);
  end;

end;

