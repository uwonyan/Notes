type
  TForm2 = class(TForm)
    GroupBox1: TGroupBox;
    cxButton1: TcxButton;
    cxMemo1: TcxMemo;
    GroupBox2: TGroupBox;
    cxColorComboBox1: TcxColorComboBox;
    cxLabel1: TcxLabel;
